{
    "manifest_version": 3,
    "name": "NotebookLM Web Importer (AI Nolza)",
    "version": "1.3",
    "description": "Collects webpage body text and YouTube links to send to NotebookLM.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.naver.com/*",
        "*://*.blog.naver.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "AI Nolza Clipper",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}